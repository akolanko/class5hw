<h2>All Posts</h2>

<% @posts.each do |post| %>
	<% @user = post.user %>
	<h4>
		<%= link_to post.title, user_post_path(@user.id, post.id) %>
	</h4>
	<span class="postbody"><%= post.body %></span>
	<br><br>
	<span class="posttime"><%= post.created_at %></span> <%= link_to "[Delete]", user_post_path(@user.id, post.id), method: :delete, confirm: "Are you sure you want to delete this post?" %>
	<br><br>
<% end %>