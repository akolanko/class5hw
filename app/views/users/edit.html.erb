<h2>Edit <%= @user.fname %>'s Information</h2>

<%= form_for @user do |f| %>
	<%= f.label :fname, "First Name:" %>
	<br>
	<%= f.text_field :fname %>
	<br>
	<%= f.label :lname, "Last Name:" %>
	<br>
	<%= f.text_field :lname %>
	<br>
	<%= f.label :email, "Email:" %>
	<br>
	<%= f.text_field :email %>
	<br>
	<%= f.submit "Update", :class => "submit" %>
<% end %>